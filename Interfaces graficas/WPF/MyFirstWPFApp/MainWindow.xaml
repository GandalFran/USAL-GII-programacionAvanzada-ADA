<Window x:Class="MyFirstWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstWPFApp"
        mc:Ignorable="d"
        Title="Bill Gates own this" Height="450" Width="800">
    <StackPanel>
        <StackPanel.Effect>
            <DropShadowEffect/>
        </StackPanel.Effect>
        <Label Name="etiqueta" Content="Hola Mundo" Foreground="Blue"/>
        <Button x:Name="boton" Content="Cambiar color" Foreground="Purple"  Height="30" Width="40" HorizontalAlignment="Left">
            <Button.Effect>
                <BlurEffect/>
            </Button.Effect>
        </Button>
    </StackPanel>
</Window>
