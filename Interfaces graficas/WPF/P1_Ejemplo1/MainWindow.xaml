<Window x:Class="P1_Ejemplo1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P1_Ejemplo1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350">
    <Window.Background>
        <ImageBrush ImageSource="mandelbroot.jpg"/>
    </Window.Background>
    <StackPanel Name="MainPanel" Orientation="Horizontal">
        <StackPanel Name="ButtonPanel">
            <Button Name="InvertButton" Content="Invierte" Margin="10" Height="50" Width="100"/>
            <Button Name="MayusButton" Content="Mayus" Margin="10" Height="50" Width="100"/>
            <Button Name="RandomColorButton" Content="Color aleatorio" Margin="10" Height="50" Width="100"/>
        </StackPanel>
        <StackPanel Name="TextBoxPannel" Width="200" Height="150">
            <TextBox Name="InputTextBox" Margin="10" Height="20"/>
            <Label Name="OutputLabel" Background="White" Margin="5" Height="50"/>
        </StackPanel>
    </StackPanel>
</Window>
